        <Button x:Name="button3" Content="Выход" HorizontalAlignment="Left" Margin="81,350,0,0" VerticalAlignment="Top" Width="75" Click="button3_Click"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="211,119,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Задание 1" HorizontalAlignment="Left" Width="118"  Name="one" IsSelected="True"/>
            <ComboBoxItem Content="Задание 2" HorizontalAlignment="Left" Width="118" Name="two" IsSelected="True"/>
            <ComboBoxItem Content="Задание 3" HorizontalAlignment="Left" Width="118" Name="three" IsSelected="True"/>
            <ComboBoxItem Content="Задание 4" HorizontalAlignment="Left" Width="118" Name="four" IsSelected="True"/>
            <ComboBoxItem Content="Задание 5" HorizontalAlignment="Left" Width="118" Name="five" IsSelected="True"/>
            <ComboBoxItem Content="Задание 6" HorizontalAlignment="Left" Width="118" Name="six" IsSelected="True"/>
        </ComboBox>




    </Grid>
